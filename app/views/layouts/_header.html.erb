<header>
  <% if user_signed_in? %>
    <div class="block px-5 py-3 font-medium text-center text-white bg-blue-600 rounded-lg" >
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'w-full' %>
    </div>
  <% else %>
    <a href="users/sign_in" class="block px-5 py-3 font-medium text-center text-white bg-blue-600 rounded-lg">Sign in</a>
  <% end %>
</header>
